{% block header %}
    <!-- Header Start -->
    <header class="navigation">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg p-0">
                        <a class="navbar-brand" href="{{ path("blog_index") }}">
                            <img src="{{ asset("assets/images/AI-logo.png") }}" alt="Logo" style="width: 175px; height: 175px">
                        </a>

                        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="ion-android-menu"></span>
                        </button>

                        <div class="collapse navbar-collapse ml-auto" id="navbarsExample09">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path("blog_index") }}">Home</a>
                                </li>
                                {{ render(controller('App\\Controller\\CategorieController::get_gategories')) }}
                                <li class="nav-item @@service"><a class="nav-link" href="/utilisateur">Utilisateur</a></li>
                                <li class="nav-item @@service"><a class="nav-link" href="/article">Article</a></li>
                                <li class="nav-item @@service"><a class="nav-link" href="/avis">Avis</a></li>
                                <li class="nav-item @@service"><a class="nav-link" href="{{ path("blog-full-width") }}">Blog</a></li>
                                {% if app.user %}
                                    <li class="nav-item @@logout">
                                        <a class="nav-link" href="{{ path("app_logout") }}">
                                            <i class="fas fa-sign-out-alt"></i>
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="nav-item @@register">
                                        <a class="nav-link" href="{{ path("app_register") }}">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item @@login">
                                        <a class="nav-link" href="{{ path("app_login") }}">
                                            <i class="fas fa-sign-in-alt"></i>
                                        </a>
                                    </li>
                                {% endif %}
                                <li class="nav-item">
                                    <form method="POST" action="{{ path('search') }}" class="form-inline my-2 my-lg-0 d-flex align-items-center">
                                        <input class="form-control mr-sm-2" type="search" id="article-search" name="search" placeholder="Search" aria-label="Search">
                                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header><!-- header close -->
{% endblock %}
